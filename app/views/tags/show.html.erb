<div class="bg-white p-6 rounded-lg shadow-md">
	<h1 class="text-2xl font-bold mb-6">タグ: <%= @tag.name %></h1>

	<% if @articles.any? %>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		<% @articles.each do |article| %>
		<div class="border rounded p-4 hover:bg-gray-50">
			<h2 class="text-xl font-semibold mb-2">
				<%= link_to article.title, article_path(article), class:
				"text-blue-600 hover:underline" %>
			</h2>
			<div class="text-sm text-gray-600 mb-2">
				投稿者: <%= article.user.email %> | <% if article.category %>
				<%= link_to article.category.name,
				category_path(article.category), class: "hover:underline" %> <%
				else %> 未分類 <% end %> | <%=
				article.created_at.strftime("%Y年%m月%d日") %>
			</div>
			<p class="text-gray-700">
				<%= truncate(article.content, length: 150) %>
			</p>
			<%= link_to "続きを読む", article_path(article), class:
			"text-blue-500 hover:underline mt-2 inline-block" %>
		</div>
		<% end %>
	</div>
	<% else %>
	<p class="text-gray-600">このタグには記事がありません。</p>
	<% end %>

	<div class="mt-6">
		<%= link_to "タグ一覧に戻る", tags_path, class: "bg-gray-500
		hover:bg-gray-600 text-white px-4 py-2 rounded" %>
	</div>
</div>
