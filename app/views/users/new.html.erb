<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
	<h1 class="text-2xl font-bold mb-6 text-center">新規登録</h1>

	<%= form_with(model: @user, url: signup_path) do |form| %> <% if
	@user.errors.any? %>
	<div class="bg-red-100 border-red-400 text-red-700 px-4 py-3 mb-4 rounded">
		<h2 class="font-bold">
			<%= pluralize(@user.errors.count, "件のエラー")
			%>により登録できませんでした:
		</h2>
		<ul class="list-disc ml-5">
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="mb-4">
		<%= form.label :email, "メールアドレス", class: "block text-gray-700
		font-bold mb-2" %> <%= form.email_field :email, class: "w-full px-3 py-2
		border border-gray-300 rounded focus:outline-none focus:border-blue-500"
		%>
	</div>

	<div class="mb-4">
		<%= form.label :password, "パスワード", class: "block text-gray-700
		font-bold mb-2" %> <%= form.password_field :password, class: "w-full
		px-3 py-2 border border-gray-300 rounded focus:outline-none
		focus:border-blue-500" %>
	</div>

	<div class="mb-6">
		<%= form.label :password_confirmation, "パスワード（確認）", class:
		"block text-gray-700 font-bold mb-2" %> 
		<%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300
		rounded focus:outline-none focus:border-blue-500" %>
	</div>

	<div class="flex items-center justify-between">
		<%= form.submit "登録", class: "bg-green-500 hover:bg-green-600
		text-white px-4 py-2 rounded cursor-pointer" %>
		<span class="text-sm text-gray-600">
			既にアカウントをお持ちの方は <%= link_to "ログイン", login_path,
			class: "text-blue-500 hover:underline" %>
		</span>
	</div>
	<% end %>
</div>
